{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "maxSize": 10000000
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingCommas": "none",
      "indentStyle": "space",
      "arrowParentheses": "asNeeded"
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    },
    "linter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}